<section>
  <h2>Create a new post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Text</label>
      <textarea id="post-content" name="post-content"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    <ul>
      {{#each posts as |post|}}
        <article class="post-article" data-id="{{post.id}}">
         {{> post-info post}}
         <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </article>
      {{/each}}
    </ul>
  </section>
{{/if}}
<script src="/javascript/add-post.js"></script>