<section>
  <h2>Create a new post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Text</label>
      <textarea id="post-content" name="post-content"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    <ol>
      {{#each posts as |post|}}
        <li>
          <div>
            <h1>{{post.title}}</h1>
            <p>{{post.content}}</p>
            <span>Posted by: {{post.user.username}} | {{format_date post.created_at}}</span>
          </div>
          <div>
            <h2>Comments: </h2>
            {{#each post.comments}}
              <div>
                {{content}}
                || posted:
                {{format_date created_at}}
                || by:
                {{user.username}}
              </div>
            {{/each}}
          </div>
        </li>
      {{/each}}
    </ol>
  </section>
{{/if}}
<script src="/javascript/add-post.js"></script>