<article>
  <div>
    <h1>{{post.title}}</h1>
    <p>{{post.content}}</p>
    <span>Posted by: {{post.user.username}} | {{format_date post.created_at}}</span>
  </div>
  <div>
    <h2>Comments: </h2>
    {{#each post.comments}}
      <div>
        {{content}}
        || posted:
        {{format_date created_at}}
        || by:
        {{user.username}}
      </div>
    {{/each}}
  </div>
</article>